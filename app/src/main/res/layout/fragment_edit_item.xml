<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/deep_pine_green"
    tools:context=".fragments.EditItemFragment">

    <include
        layout="@layout/edit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="560dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/light_peach"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="169dp"
            android:layout_height="207dp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="250dp"
            android:src="@drawable/ic_item" />

        <EditText
            android:id="@+id/description_edit"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="@color/deep_pine_green"
            android:layout_marginStart="10dp"
            android:textColor="@color/deep_pine_green"
            android:layout_marginTop="400dp"
            android:theme="@style/MyEditText"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/title_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textColor="@color/deep_pine_green"
            android:textColorHint="@color/deep_pine_green"
            android:layout_marginStart="25dp"
            android:theme="@style/MyEditText"
            android:layout_marginTop="280dp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/price_edit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textColor="@color/deep_pine_green"
            android:textColorHint="@color/deep_pine_green"
            android:layout_marginStart="25dp"
            android:layout_marginTop="340dp"
            android:theme="@style/MyEditText"
            android:backgroundTint="@color/orange"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView_item_layout"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="230dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_user"
            />

        <TextView
            android:id="@+id/seller_edit"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColorHint="@color/deep_pine_green"
            android:layout_marginStart="30dp"
            android:layout_marginTop="233dp"
            android:textColor="@color/deep_pine_green"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_suffix"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="RON/KG"
            android:textColorHint="@color/deep_pine_green"
            android:layout_marginStart="90dp"
            android:layout_marginTop="352dp"
            android:textColor="@color/deep_pine_green"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/creationTime_edit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Creation time"
            android:layout_marginStart="200dp"
            android:layout_marginTop="235dp"
            android:textColor="@color/deep_pine_green"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/save_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="480dp"
            android:layout_marginStart="70dp"
            android:backgroundTint="@color/orange"
            android:textColorHint="@color/light_peach"
            android:text="Save changes" />

    </androidx.cardview.widget.CardView>


</FrameLayout>