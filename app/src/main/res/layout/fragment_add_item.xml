<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_pine_green"
    android:fillViewport="true">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ralf.gpstelephony.TelephonyManagerFragment">

        <include
            layout="@layout/add_item_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_login_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="50dp"
            android:text="Give us details about your fare"
            android:textColor="@color/light_peach"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/title_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginStart="70dp"
            android:ems="10"
            android:hint="Title"
            android:textColor="@color/deep_pine_green"
            android:inputType="textPersonName"
            android:textColorHint="@color/deep_pine_green"
            android:background="@drawable/edit_text_style_add_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_login_fragment" />

        <Switch
            android:id="@+id/switch1_add"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="60dp"
            android:textOff="A"
            android:textOn="I"
            android:textSize="20sp"
            android:showText="true"
            android:switchTextAppearance="@style/SwitchTextAppearance"
            android:textColor="@color/light_peach"
            app:track="@drawable/custom_track"
            android:thumb="@drawable/custom_thumb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            />

        <EditText
            android:id="@+id/price_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginStart="70dp"
            android:ems="10"
            android:hint="Price/amount"
            android:textColor="@color/deep_pine_green"
            android:inputType="textPersonName"
            android:textColorHint="@color/deep_pine_green"
            android:background="@drawable/edit_text_style_add_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_login_fragment" />

        <Spinner
            android:id="@+id/price_type_add"
            android:layout_marginTop="240dp"
            android:layout_marginStart="70dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/amount_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_marginStart="70dp"
            android:ems="10"
            android:hint="Available amount"
            android:textColor="@color/deep_pine_green"
            android:inputType="textPersonName"
            android:textColorHint="@color/deep_pine_green"
            android:background="@drawable/edit_text_style_add_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_login_fragment" />

        <Spinner
            android:id="@+id/amount_type_add"
            android:layout_marginTop="320dp"
            android:layout_marginStart="70dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/description_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginStart="70dp"
            android:ems="10"
            android:hint="Description"
            android:textColor="@color/deep_pine_green"
            android:inputType="textPersonName"
            android:textColorHint="@color/deep_pine_green"
            android:background="@drawable/edit_text_style_add_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_login_fragment" />

        <TextView
            android:id="@+id/contact_details_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_marginStart="50dp"
            android:text="Contact details"
            android:textColor="@color/light_peach"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.27"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/username_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="440dp"
            android:layout_marginStart="70dp"
            android:ems="10"
            android:hint="Username"
            android:textColor="@color/deep_pine_green"
            android:inputType="textPersonName"
            android:textColorHint="@color/deep_pine_green"
            android:background="@drawable/edit_text_style_add_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_login_fragment" />

        <EditText
            android:id="@+id/email_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:layout_marginStart="70dp"
            android:ems="10"
            android:hint="Email"
            android:textColor="@color/deep_pine_green"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/deep_pine_green"
            android:background="@drawable/edit_text_style_add_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_login_fragment" />

        <EditText
            android:id="@+id/phone_number_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="540dp"
            android:layout_marginStart="70dp"
            android:ems="10"
            android:hint="Phone number"
            android:textColor="@color/deep_pine_green"
            android:inputType="textPhonetic"
            android:textColorHint="@color/deep_pine_green"
            android:background="@drawable/edit_text_style_add_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_login_fragment" />

        <Button
            android:id="@+id/launch_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:layout_marginStart="90dp"
            android:backgroundTint="@color/orange"
            android:textColorHint="@color/light_peach"
            android:text="Launch my fare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintStart_toStartOf="parent" />

    </FrameLayout>

</ScrollView>